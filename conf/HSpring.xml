 	<!-- Jdk代理实现目标对象 -->
	<bean id="targetBean" class="HSpring.aop.test.TargetBean"></bean>
	<!-- 前置通知对象 -->
	<bean id="beforeAdvice" class="HSpring.aop.test.BeforeAdvice"></bean>
	<!-- 代理对象 -->
	<bean id="targetBeanProxy" class="HSpring.org.core.aop.ProxyBeanFactory">
		<property  name="targetBean" ref="targetBean"></property>
		<!-- value只能用字符串的形式，接口不能实例化 -->
		<property  name="targetInterface" value="HSpring.aop.test.TargetBeanImp"></property>
		<property  name="adviceName" ref="beforeAdvice"></property>
	</bean>
	<!-- Cglib代理实现目标对象 -->
	<bean id="cglibtargetBean" class="HSpring.aop.test.CglibTargetBean"></bean>
	<bean id="cglibBeanProxy" class="HSpring.org.core.aop.ProxyBeanFactory">
		<property name="targetBean" ref="cglibtargetBean"></property>
		<property name="adviceName" ref="beforeAdvice"></property>
	</bean>
</beans>